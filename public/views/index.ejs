<section class="mainContainer">
    <!-- Filter Section -->
    <section class="filter">
        <%- include('partials/filter.ejs') %>
    </section>
    <section class="results">
        <!-- Page title & Filter tags -->
        <%- include('partials/title.ejs') %>
