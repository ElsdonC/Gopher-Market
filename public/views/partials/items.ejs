<section id="items" class="d-flex flex-wrap">
    <% items.forEach((item)=>{ %>
    <div id="<%=item.id%>" class="card d-inline-block mb-4 card-hover-scale itemCard">
        <a href="/item/<%= item.name %>" class="itemLink">
            <img src="../<%= item.imagePath %>" class="card-img-top" alt="<%= item.name %>" />
            <div class="card-body">
                <div class="d-flex flex-row align-items-center justify-content-between">
                    <span class="card-text item-name"><%= item.name %></span>
                    <span class="card-title item-price">$<%= item.price.toFixed(2) %></span>
                </div>
                <div class="d-flex flex-row align-items-center justify-content-between">
                    <!-- location -->
                    <div class="d-flex flex-row align-items-center">
                        <i class="fa-solid fa-location-dot"></i>
                        <span class="location"><%=item.location%></span>
                    </div>
                    <!-- icons -->
                        <% if (user) { %> <% if (user.starred.includes(item.id)){ %>
                        <a class="bookmarkAnchor" href="javascript:void(0)">
                            <svg id="<%= item.id %>" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-fill bookmark" viewBox="0 0 16 16">
                                <path d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2z" />
                            </svg>
                        </a>
                        <% } else { %>
                        <a class="bookmarkAnchor" href="javascript:void(0)">
                            <svg id="<%= item.id %>" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark bookmark" viewBox="0 0 16 16">
                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z" />
                            </svg>
                        </a>
                        <% }} %>
                        <% if (page != "userItems") { %>
                        <img src="../images/add-to-cart.png" class="add-to-cart" alt="Shopping cart icon" />
                </div>
                    <% if (page == "bookmarked") { %>
                        <div class="modal fade" id="unstarModal_<%= item.id %>" role="dialog" aria-labelledby="unstarModalLabel" aria-hidden="true" data-bs-backdrop="static">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="unstarModalLabel">Remove Bookmark</h5>
                                    </div>
                                    <div class="modal-body">Are you sure you want to remove this item from your bookmarks?</div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-danger" onclick="unstar('<%=item.id%>')">Remove</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <%} else { %>
                </div>
                        <% let editLink = `/userItems/edit/${item.id}` %>
                        <a href="<%= editLink %>" class="btn btn-warning">Edit</a>
                        <% let deleteLink = `http://localhost:3000/userItems/delete/${item.id}` %>
                        <button type="button" class="deleteBtn btn btn-danger" onclick="showDeleteModal('<%=item.id%>')">Sold/Delete</button>
                        <div class="modal fade" id="deleteModal_<%=item.id%>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">
                                            Confirm Delete
                                        </h5>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this item?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-danger" onclick="deleteItem('<%=deleteLink%>')">Sold/Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </a>
        </div>
    <% }) %>
</section>