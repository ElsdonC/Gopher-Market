<section class="filtersContainer">
    <h3 class="filterLabel">Filter</h3>
    <h4 class="filterTitle">Category</h4>
    <section class="input-field">
        <div class="option">
            <input type="radio" id="textbooks" name="category" value="textbooks">
            <i class="fa-solid fa-book icon space-left"></i>
            <label for="textbooks">Textbooks</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="school-supplies" name="category" value="school-supplies">
            <i class="fa-solid fa-pencil icon space-left"></i>
            <label for="school-supplies">School Supplies</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="electronics" name="category" value="electronics">
            <i class="fa-solid fa-laptop icon"></i>
            <label for="electronics">Electronics</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="furniture-appliances" name="category" value="furniture-appliances">
            <i class="fa-solid fa-couch icon"></i>
            <label for="furniture-appliances" name="category">Furniture/Appliances</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="clothing" name="category" value="clothing">
            <i class="fa-solid fa-shirt icon"></i>
            <label for="clothing">Clothing</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="kitchenware" name="category" value="kitchenware">
            <i class="fa-solid fa-utensils icon space-left"></i>
            <label for="kitchenware">Kitchenware</label>
            <br>
        </div>
    </section>
    
    <h4 class="filterTitle">Location</h4>
    <section class="input-field">
        <div class="option">
            <input type="radio" id="eastbank" value="eastbank" name="location">
            <i class="fa-solid fa-circle-arrow-right icon"></i>
            <label for="eastbank">East Bank</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="westbank" value="westbank" name="location">
            <i class="fa-solid fa-circle-arrow-left icon"></i>
            <label for="westbank">West Bank</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="dinkytown" value="dinkytown" name="location">
            <i class="fa-solid fa-city icon"></i>
            <label for="dinkytown">DinkyTown</label>
            <br>
        </div>
        <div class="option">
            <input type="radio" id="off-campus" value="off-campus" name="location">
            <i class="fa-solid fa-globe icon"></i>
            <label for="off-campus">Off Campus</label>
            <br>
        </div>
    </section>

    <h4 class="filterTitle">Condition</h4>
    <section class="input-field">
        <div class="option">
            <input type="checkbox" id="new" value="new" name="condition">
            <label for="new">New</label>
            <br>
        </div>
        <div class="option">
            <input type="checkbox" id="like-new" value="like-new" name="condition">
            <label for="like-new">Like New</label>
            <br>
        </div>
        <div class="option">
            <input type="checkbox" id="good" value="good" name="condition">
            <label for="good">Good</label>
            <br>
        </div>
        <div class="option">
            <input type="checkbox" id="fair" value="fair" name="condition">
            <label for="fair">Fair</label>
            <br>
        </div>
        <div class="option">
            <input type="checkbox" id="poor" value="poor" name="condition">
            <label for="poor">Poor</label>
            <br>
        </div>
    </section>

    <h4 class="filterTitle">Delivery Method</h4>
    <section class="input-field">
        <div class="option">
            <input type="checkbox" id="delivery" value="delivery" name="deliveryMethod">
            <label for="delivery">Delivery</label>
            <br>
        </div>
        <div class="option">
            <input type="checkbox" id="pick-up" value="pick-up" name="deliveryMethod">
            <label for="pick-up">Pick Up</label>
            <br>
        </div>
    </section>

    <h4 class="filterTitle">Price</h4>
    <section class="input-field">
        <div class="d-flex flex-row align-items-center w-100 justify-content-between mb-1">
            <label for="min_input">Min</label>
            <input id="min_input" class="w-50" type="range" min="0" max="500" value="0" step="1" />
            <input id="min_value" onkeypress="return event.keyCode === 8 || event.charCode >= 48 && event.charCode <= 57" class="d-inline w-25" type="text" maxlength="4"/>
        </div>
        <div class="d-flex flex-row align-items-center w-100 justify-content-between mb-1">
            <label for="max_input">Max</label>
            <input id="max_input" class="w-50" type="range" min="0" max="1000" value="1000" step="1" />
            <input id="max_value" onkeypress="return event.keyCode === 8 || event.charCode >= 48 && event.charCode <= 57" class="d-inline w-25" type="text" maxlength="4"/>
        </div>
    </section>
    <button id="filterBtn" class="btn">Apply Filters</button>
    <button id="resetFilterBtn" class="btn">Reset Filters</button>
</section>