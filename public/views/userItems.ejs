<%- include('partials/header.ejs') %>
<%- include('partials/searchBar.ejs') %>

<section id="items" class="mt-5 d-flex flex-wrap">
    <% items.forEach((item)=>{ %>
    <div class="card d-inline-block mb-4 itemCard">
        <a href="/item/<%= item.name %>" class="itemLink">
            <p class="view">View Item</p>
            <img
                src="../<%= item.imagePath %>"
                class="card-img-top"
                alt="<%= item.name %>"
            />

            <div class="card-body">
                <h5 class="card-title">$<%= item.price.toFixed(2) %></h5>
                <p class="card-text"><%= item.name %></p>
                <p class="location"><%= item.location %></p>
                <div class="userItemFlex d-flex flex-column align-items-center justify-content-center">
                    <div class="editDeleteButtons d-flex flex-row w-100 gap-1">
                        <% let editLink = `/userItems/edit/${item.id}` %>
                        <a href="<%= editLink %>" class="btn btn-warning">Edit</a>
                        <% let deleteLink =
                        `http://localhost:3000/userItems/delete/${item.id}` %>
                        <button
                            type="button"
                            class="deleteBtn btn btn-danger"
                            onclick="showDeleteModal('<%=item.id%>')"
                        >
                            Sold/Delete
                        </button>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div
        class="modal fade"
        id="deleteModal_<%=item.id%>"
        tabindex="-1"
        role="dialog"
        aria-labelledby="deleteModalLabel"
        aria-hidden="true"
    >
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">
                        Confirm Delete
                    </h5>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this item?
                </div>
                <div class="modal-footer">
                    <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                    >
                        Cancel
                    </button>
                    <button
                        type="button"
                        class="btn btn-danger"
                        onclick="deleteItem('<%=deleteLink%>')"
                    >
                        Sold/Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
    <% }) %> <% if (items.length == 0) { %>
    <h2>No Items Found</h2>
    <% } %>
</section>
<script src="../js/userItems.js"></script>
<%- include('partials/footer.ejs') %>
