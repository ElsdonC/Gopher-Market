<%- include('partials/header.ejs') %>

<section id="itemPage">
    <img class="itemImage" src="../<%= item.imagePath %>" alt="<%= item.name %> image">
    <section class="itemInfo">
        <h4>Price: $<%= item.price.toFixed(2) %></h4>
        <h1><%= item.name.toUpperCase() %></h1>
        <p>Category: <%= item.category %></p>
        <p>Description: <%= item.description %></p>
        <p>Stars: <%= item.starCount %></p>
        <% if (user) { %>
            <p>Seller: <%= seller.displayName %></p>
            <p>Contact: <%= seller.email %></p>
            <a href="mailto:<%=seller.email%>?subject=Gopher Market Message" target="_blank"><button class="contactSellerBtn btn">Contact Seller</button></a>
         <% } else { %>
            <button onclick='window.location.href="/login"' class="contactSellerBtn btn">Login to contact seller</button>
         <% } %>
        
    </section>
</section>

<script src="../js/index.js"></script>
<%- include('partials/footer.ejs') %>
